@model AppUser
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Edit</h1>



<form method="post" asp-controller="AppUsers" asp-action="Edit">

    <input type="hidden" asp-for="AppUserId" />

    <div class="form-group">
        <label asp-for="UserName" class="control-label"></label>
        <input type="text" value="@Model.UserName" id="UserName" name="UserName" class="form-control" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>

    <div class="form-group mt-1">
        <label asp-for="Email" class="control-label"></label>
        <input type="email" value="@Model.Email" id="Email" name="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group mt-1">
        <label asp-for="PhoneNumber" class="control-label"></label>
        <input type="number" value="@Model.PhoneNumber" id="PhoneNumber" name="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <div class="form-group mt-1">
        <label asp-for="Password" class="control-label"></label>
        <input type="password" @Model.Password id="Password" name="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group mt-1">
        <label asp-for="RoleId" class="control-label"></label>
        <select id="RoleId" onload="@Model.RoleId" name="RoleId" class="form-select" asp-items="ViewBag.RoleId"></select>
        <span asp-validation-for="RoleId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Edit User</button>
    </div>
</form>
