@model AppUser
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Create User</h1>

<form method="post" asp-controller="AppUsers" asp-action="Create" >


    <div class="form-group">
        <label asp-for="UserName" class="control-label"></label>
        <input type="text" id="UserName" name="UserName" class="form-control" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>

    <div class="form-group mt-1">
        <label asp-for="Email" class="control-label"></label>
        <input type="email" id="Email" name="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group mt-1">
        <label asp-for="PhoneNumber" class="control-label"></label>
        <input type="number" id="PhoneNumber" name="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <div class="form-group mt-1">
        <label asp-for="Password" class="control-label"></label>
        <input type="password" id="Password" name="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group mt-1">
        <label asp-for="RoleId" class="control-label"></label>
        <select id="RoleId" name="RoleId" class="form-select" asp-items="ViewBag.RoleId"></select>
        <span asp-validation-for="RoleId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Create User</button>
    </div>
</form>
