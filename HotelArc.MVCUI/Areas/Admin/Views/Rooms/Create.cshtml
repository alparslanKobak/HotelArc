@model Room

@{
    ViewData["Title"] = "Create";
}


<h2>Create A Room</h2>

<form method="post" asp-controller="Rooms" asp-action="Create" enctype="multipart/form-data">


    <div class="form-group">
        <label asp-for="RoomImage" class="control-label"></label>
        <input type="file" id="RoomImage" name="RoomImage" class="form-control" />
        <span asp-validation-for="RoomImage" class="text-danger"></span>
    </div>
    <div class="form-group mt-1">
        <label asp-for="RoomNumber" class="control-label"></label>
        <input asp-for="RoomNumber" class="form-control" />
        <span asp-validation-for="RoomNumber" class="text-danger"></span>
    </div>

    <div class="form-group mt-1">
        <label asp-for="RoomType" class="control-label"></label>
        <input asp-for="RoomType" class="form-control" />
        <span asp-validation-for="RoomType" class="text-danger"></span>
    </div>

    <div class="form-group mt-1">
        <label asp-for="Price" class="control-label">Price (USD)</label>
        <input asp-for="Price" class="form-control" type="number" min="0" step="0.01" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>


    <div class="form-group">
        <button type="submit" class="btn btn-primary"><i class="fa-solid fa-circle-plus"></i> Create</button>
    </div>

</form>
