@model Reservation
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Edit</h1>

<div class="bg-dark">
    <h4 class="text-white">Reservation To Update Informations</h4>

    <h5 class="text-white">Room Id: @Model.Room.RoomNumber</h5>
    <hr />
    <h5 class="text-white">User Id: @Model.AppUser.UserName</h5>
    <hr />
    <h5 class="text-white">Check In: @Model.CheckIn</h5>
    <hr />
    <h5 class="text-white">Check Out: @Model.CheckOut</h5>


</div>

<form asp-action="Edit" asp-controller="Reservation" method="post">
    <input type="hidden" asp-for="ReservationId" />
    <div class="form-group">
        <label asp-for="RoomId" class="control-label"></label>
        <select asp-for="RoomId" asp-items="ViewBag.Rooms" class="form-control"></select>
        <span asp-validation-for="RoomId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AppUserId" class="control-label"></label>
        <select asp-for="AppUserId" asp-items="ViewBag.Users" class="form-control"></select>
        <span asp-validation-for="AppUserId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CheckIn" class="control-label"></label>
        <input asp-for="CheckIn" type="date" class="form-control" />
        <span asp-validation-for="CheckIn" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CheckOut" class="control-label"></label>
        <input asp-for="CheckOut" type="date" class="form-control" />
        <span asp-validation-for="CheckOut" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Edit A Reservation</button>
</form>

